<Window x:Class="clock_cSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="fujifilm_macro_test"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
         WindowState="Maximized"
        Background="Transparent"
         ShowInTaskbar="False">

    <Grid Name="Grid1">
        <TextBlock Name="time_string" HorizontalAlignment="Left"   Opacity="1"      Background="#66cceeee" Foreground="#99222222" Margin="0,0,0,0" Text="yyyy/mm/ddhh:" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial" FontSize="80"/>
        <Border BorderThickness="1" BorderBrush="Black"/>

    </Grid>
</Window>